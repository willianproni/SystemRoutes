@using Model.MongoDb
@using Services
@model Model.MongoDb.Person

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Person</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
           <div class="form-group">
				</> <label asp-for="Team" class="control-label"></label><br />
				<select asp-for="Team" id="City">
					@{
						foreach (var team in await SeachApi.GetAllTeamInApi())
						{
							<option value="@team.NameTeam"> @team.NameTeam </option>
						}
					}
				</select>
				<span asp-validation-for="Team" class="text-danger"></span>
			</div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
