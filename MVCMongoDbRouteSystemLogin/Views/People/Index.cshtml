@model IEnumerable<Model.MongoDb.Person>

@{
	ViewData["Title"] = "Index";
}
<Br />
<div class="d-flex justify-content-between" >
	<h1 class="d-flex justify-content-center">Todas as Pessoas</h1>
	<a asp-action="Create" class="btn btn-outline-secondary">Cadastrar</a>
</div>

<br />

<table class="table table-hover">
	<thead>
		<tr>
			<th>
				Nome
			</th>
			<th>
				Status
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr scope="row">
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					            @if(item.Active == true)
            {
                <p>Disponível</p>
                
            }
            else
            {
                <p>Ocupado</p>
            }  
				</td>
				<td class="d-flex justify-content-around">
					<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">Editar</a>
					<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-success">Detalhes</a>
					<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
