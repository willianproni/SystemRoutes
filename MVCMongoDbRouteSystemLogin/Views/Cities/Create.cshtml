@model Model.City

@{
	ViewData["Title"] = "Create";
}
<br />

<h1>Cadastrar Cidade</h1>

<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label>Nome Cidade</label><br /><br />
				<input asp-for="NameCity" class="form-control border border-secondary" placeholder="Nome da Cidade..." />
				<span asp-validation-for="NameCity" class="text-danger"></span>
			</div>
			<br />
			<div class="form-group">
				<label>Nome Estado</label><br /><br />
				<input asp-for="State" class="form-control border border-secondary" placeholder="Nome do Estado..." />
				<span asp-validation-for="State" class="text-danger"></span>
			</div>
			<br />
			<div class="form-group">
				<input type="submit" value="Cadastrar" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>
<hr />
<div>
	<a asp-action="Index" class="btn btn-outline-secondary" >Retornar</a>
</div>

@section Scripts {
    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
