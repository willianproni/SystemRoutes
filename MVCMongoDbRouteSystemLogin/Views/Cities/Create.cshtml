@model Model.City

@{
	ViewData["Title"] = "Create";
}

<h1>Cadastrar Cidade</h1>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label>Nome Cidade</label>
				<input asp-for="NameCity" class="form-control" placeholder="Nome da Cidade..." />
				<span asp-validation-for="NameCity" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label>Nome Estado</label>
				<input asp-for="State" class="form-control" placeholder="Nome do Estado..." />
				<span asp-validation-for="State" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Salvar" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
