@model IEnumerable<Model.City>

@{
	ViewData["Title"] = "Cidade";
}

<br />
<div class="d-flex justify-content-between">
	<h1 class="d-flex justify-content-center">Todas as Cidades</h1>
	<a asp-action="Create" class="btn btn-outline-secondary">Cadastrar</a>
</div>

<br />

<table class="table  table-hover">
	<thead>
		<tr>
			<th>
				Cidade
			</th>
			<th>
				Estado
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr scope="row">
				<td>
					@Html.DisplayFor(modelItem => item.NameCity)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.State)
				</td>
				<td class="d-flex justify-content-around">
					<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">Editar</a>
					<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-success">Detalhes</a>
					<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
