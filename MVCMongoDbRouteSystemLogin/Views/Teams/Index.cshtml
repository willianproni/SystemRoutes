@model IEnumerable<Model.MongoDb.Team>

@{
	ViewData["Title"] = "Times";
}

<br />
<div class="d-flex justify-content-between">
	<h1 class="d-flex justify-content-center">Todos os Times</h1>
	<a asp-action="Create" class="btn btn-outline-secondary">Cadastrar</a>
</div>

<br />

<table class="table table-hover">
	<thead>
		<tr>
			<th>
				Time(s)
			</th>
			<th>
				Integrante(s)
			</th>
			<th>
				Quantidade de Integrantes
			</th>
			<th>
				Cidade
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.NameTeam)
				</td>
				<td>
					@foreach (var person in @item.Persons)
					{
						<p>@Html.DisplayFor(people => person.Name)</p>
					}
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Persons.Count)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.City.NameCity)
				</td>

				<td class="d-flex justify-content-around">
					<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">Editar</a>
					<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-success">Detalhes</a>
					<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
