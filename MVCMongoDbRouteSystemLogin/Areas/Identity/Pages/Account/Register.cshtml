@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>Registrar novo Usuário</h1>

<div class="row">
    <div class="col-md-4">					
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>Email</label><br /><br />
                <input asp-for="Input.Email" class="form-control  border border-secondary" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label>Senha</label><br /><br />
                <input asp-for="Input.Password" class="form-control  border border-secondary" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
              <br />
            <div class="form-group">
                <label>Confirmar Senha</label><br /><br />
                <input asp-for="Input.ConfirmPassword" class="form-control  border border-secondary" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
              <br />
            <button type="submit" class="btn btn-outline-secondary">Registrar</button>
        </form>
        
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
