@page
@model DeletePersonalDataModel
@{
	ViewData["Title"] = "Deletar Conta";
	ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="alert alert-warning" role="alert">
	<p>
		<strong>A exclusão desses dados removerá permanentemente sua conta e não poderá ser recuperada.</strong>
	</p>
</div>

<div>
	<form id="delete-user" method="post" class="form-group">
		<div asp-validation-summary="All" class="text-danger"></div>
		@if (Model.RequirePassword)
		{
			<div class="form-group">
				<label>Senha</label><br /> <br />
				<input asp-for="Input.Password" class="form-control border border-secondary" />
				<span asp-validation-for="Input.Password" class="text-danger"></span>
			</div>
			<br />
		}
		<button class="btn btn-danger" type="submit">Deletar Conta</button>
	</form>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}